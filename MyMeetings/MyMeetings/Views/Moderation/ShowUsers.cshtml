@model IEnumerable<MyMeetings.Models.ApplicationUser>

@{
    ViewBag.Title = "ShowUsers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ShowUsers</h2>

<table>
    @foreach (var m in Model)
    {
        <tr>
            <td>
                <input id="@m.Id" type="radio" name="role" value=@m.Id class="user-id" />
            </td>
            <td>
                <p>@m.UserName </p>
            </td>
            <td>
                <img src="~/Content/images/information.png" width="13" height="13" new class="userInfo"><img/>
            </td>
        </tr>
    }
</table>
@section Scripts {
    
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/scripts/jquery.unobtrusive-ajax.js")
    @Scripts.Render("~/scripts/commonscripts/roles/roleanduserhandler.js")
    <script type="text/javascript">

        $(function () {
            $.ajaxSetup({ cache: false });
            $(".userInfo").click(function (e) {

                e.preventDefault();
                $.get(this.href, function (data) {
                    $('#dialogContent').html(data);
                    $('#modDialog').modal('show');
                });
            });
        })
</script>
}